---
import '@fontsource-variable/inter';
---

<style is:inline>
  /* Light Mode Colors */
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Black and White Palette */
    --aw-color-primary: rgb(16 16 16); /* Black */
    --aw-color-secondary: rgb(81 81 81); /* Dark Gray */
    --aw-color-accent: rgb(40 40 40); /* Very Dark Gray */

    /* Text and Background */
    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255); /* White */

    --aw-color-bg-page-dark: rgb(3 6 32);

    ::selection {
      background-color: #e0e0e0;
    }
  }

  /* Dark Mode Colors */
  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Inverted Black and White Palette */
    --aw-color-primary: rgb(40 40 40);
    --aw-color-secondary: rgb(200 200 200);
    --aw-color-accent: rgb(229 236 246);

    /* Text and Background */
    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(16 16 16); /* Black */

    ::selection {
      background-color: #444444;
      color: snow;
    }
  }

  /* --- MAILCHIMP FORM STYLES --- */
  #mc_embed_signup {
    background: transparent !important;
    font: inherit !important;
    color: inherit !important;
    width: 100%;
    max-width: 500px;
    margin: 1rem auto 0;
  }

  #mc_embed_signup form {
    padding: 0 !important;
  }

  #mc_embed_signup .mc-field-group {
    display: flex;
    gap: 0.5rem;
    width: 100% !important;
    padding: 0 !important;
  }

  #mc_embed_signup .mc-field-group input[type='email'] {
    flex-grow: 1;
    background-color: var(--aw-color-bg-page);
    color: var(--aw-color-text-default);
    border: 1px solid var(--aw-color-accent);
    border-radius: var(--aw-border-radius);
    padding: 0.75rem 1rem;
    width: 100% !important;
  }
  .dark #mc_embed_signup .mc-field-group input[type='email'] {
    background-color: rgb(22 25 37 / 66%);
  }

  #mc_embed_signup .mc-field-group input[type='submit'] {
    background-color: var(--aw-color-primary);
    color: var(--aw-color-text-default);
    font-weight: 600;
    border-radius: var(--aw-border-radius);
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--aw-color-primary);
    cursor: pointer;
    transition: all 0.2s ease-in-out;
  }
  .dark #mc_embed_signup .mc-field-group input[type='submit'] {
    color: var(--aw-color-bg-page);
  }
  #mc_embed_signup .mc-field-group input[type='submit']:hover {
    background-color: var(--aw-color-accent);
    border-color: var(--aw-color-accent);
  }

  #mc_embed_signup .content__gdpr {
    padding-top: 1rem;
    font-size: 0.875rem;
    color: var(--aw-color-text-muted);
  }

  #mc_embed_signup .gdpr-mergeRow .mc_fieldset {
    margin-top: 0.75rem;
  }

  /* NEW: Adds space above the submit button */
  #mc_embed_signup .optionalParent {
    margin-top: 1rem;
  }

  /* Hides extra Mailchimp text */
  #mc_embed_signup h2,
  #mc_embed_signup .indicates-required {
    display: none !important;
  }
</style>
