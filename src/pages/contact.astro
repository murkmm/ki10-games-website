---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features from '~/components/widgets/Features.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Contact | Ki10 Games',
};

// Array of your social links for easier management
const socialLinks = [
  { title: 'X (Twitter)', icon: 'tabler:brand-x', href: 'https://x.com/Ki10Games/' },
  { title: 'YouTube', icon: 'tabler:brand-youtube', href: 'https://youtube.com/@official.ki10games' },
  { title: 'TikTok', icon: 'tabler:brand-tiktok', href: 'https://www.tiktok.com/@ki10.games' },
  { title: 'Discord', icon: 'tabler:brand-discord', href: 'https://discord.gg/NqtVzsmj3A' },
  { title: 'Steam', icon: 'tabler:brand-steam', href: 'https://steamcommunity.com/groups/Ki10Games' },
];
---

<Layout metadata={metadata}>
  <HeroText tagline="Contact" title="Get in touch & follow our journey" />

  <section class="py-12 sm:py-16">
    <div class="mx-auto max-w-6xl px-4 md:px-6">
      <div class="text-center">
        <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">Join Our Mailing List</h2>
        <p class="mt-4 text-lg text-muted">
          Be the first to hear about new updates, release dates, and exclusive behind-the-scenes content.
        </p>
      </div>
      <div class="mt-12 mx-auto max-w-xl"></div>
    </div>
  </section>

  <Features
    title="Direct Contact"
    subtitle="For specific inquiries, here's how to reach us."
    columns={2}
    items={[
      {
        title: 'General & Press Inquiries',
        description: 'For any questions, feedback, media kits, or just to say hello.',
        icon: 'tabler:mail',
        callToAction: {
          text: 'contact@ki10games.com',
          href: 'mailto:contact@ki10games.com',
        },
      },
      {
        title: 'Business Inquiries',
        description: 'For partnerships, collaborations, and other business-related questions.',
        icon: 'tabler:briefcase',
        callToAction: {
          text: 'business@ki10games.com',
          href: 'mailto:business@ki10games.com',
        },
      },
    ]}
  />

  <section class="py-12 sm:py-16">
    <div class="mx-auto max-w-6xl px-4 md:px-6">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold tracking-tight sm:text-4xl">Follow Us</h2>
        <p class="mt-4 text-lg text-muted">
          Find us on your favorite platforms for the latest news and behind-the-scenes content.
        </p>
      </div>
      <ul class="grid grid-cols-2 md:grid-cols-5 gap-4">
        {
          socialLinks.map((link) => (
            <li class="text-center">
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block p-4 rounded-lg hover:bg-gray-100 dark:hover:bg-slate-800 transition"
              >
                <Icon name={link.icon} class="w-12 h-12 mx-auto text-primary dark:text-white" />
                <span class="mt-2 block text-sm font-medium text-default">{link.title}</span>
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</Layout>
