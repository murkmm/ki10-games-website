---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features from '~/components/widgets/Features.astro'; // For the team section

const metadata = {
  title: 'Ki10 Games â€” Hail The Kitten Overlord!',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero image={{ src: '~/assets/images/your-game-art.png', alt: 'Ki10 Games - Key Art' }}>
    <Fragment slot="title">
      <span class="text-accent dark:text-white">Hail The Kitten Overlord!</span>
    </Fragment>
    <Fragment slot="subtitle">
      Ki10 Games is a small independent game development studio in the UK, dedicated to creating games that are
      exciting, memorable, and that we personally want to play.
    </Fragment>
  </Hero>

  <Content
    tagline="About Ki10"
    title="Our Grand Plan? To Sell 10 Copies."
    items={[
      {
        title: 'Friends First, Devs Second',
        description:
          'Ki10 Games was founded by Scott & Mark after years of friendship and a shared passion for creating games. We figured it was finally time to make it official and begin our first project together.',
      },
      {
        title: 'Jack of All Trades',
        description:
          'As a two-person team, we both have an active role in most areas of development. Our goal is to work together to unlock the "Jack of All Trades" achievement in life!',
      },
      {
        title: 'No Genre Is Safe',
        description:
          "Our vision isn't to chase trends or make the most money; it's to make games we love, regardless of genre. If it sounds fun to us, we'll build it.",
      },
    ]}
    image={{
      src: '~/assets/images/studio-image.png',
      alt: 'Ki10 Games Development',
    }}
  />

  <Content
    isReversed
    tagline="Our First Official Project"
    title="KIT - Knight in Training"
    items={[
      {
        title: 'Action-Adventure',
        description:
          'Explore a vibrant world, solve puzzles, and battle foes in a classic action-adventure experience.',
      },
      {
        title: 'Narrative Driven',
        description: 'Uncover a compelling story as you help KIT on their journey to become a true knight.',
      },
      {
        title: 'Currently In Development',
        description: 'Follow our dev log for the latest updates on our progress!',
      },
    ]}
    image={{
      src: '~/assets/images/kit-gameplay-screenshot.png',
      alt: 'Screenshot of KIT - Knight in Training',
    }}
  />

  <BlogLatestPosts
    title="Latest From the Dev Log"
    information="Here you'll find the latest updates on the development of our projects, straight from the litter tray."
  />

  <Features
    id="team"
    tagline="Meet The Team"
    title="The Minds Behind the Madness"
    subtitle="Meet the devs behind the meow-gic."
    items={[
      {
        title: 'Mark McManus',
        description:
          'The QA Veteran and Game Designer of the duo, with nearly a decade of experience making sure games are as polished as they are fun.',
        icon: 'tabler:user-edit', // Placeholder icon
      },
      {
        title: 'Scott Hamilton',
        description:
          'The Lead Artist and World Builder of the team, bringing the quirky ideas and kitten-filled worlds to life.',
        icon: 'tabler:user-edit', // Placeholder icon
      },
    ]}
  />

  <CallToAction>
    <Fragment slot="title"> Follow Our Journey </Fragment>
    <Fragment slot="subtitle">
      Be the first to hear about new updates, release dates, and exclusive behind-the-scenes content from Ki10 Games.
    </Fragment>
  </CallToAction>
</Layout>
