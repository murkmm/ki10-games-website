---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Subscription Confirmed!',
  description: 'Welcome! Your subscription to the Ki10 Games newsletter is confirmed.',
  robots: {
    index: false,
  },
};
---

<Layout metadata={metadata}>
  <section class="px-4 py-16 sm:py-20">
    <div class="mx-auto max-w-2xl text-center">
      <Icon name="tabler:circle-check" class="mx-auto h-16 w-16 text-green-600" />
      <h1 class="mt-4 text-4xl font-bold tracking-tight sm:text-5xl">Success! You're Confirmed.</h1>
      <p class="mt-4 text-lg text-muted">
        Welcome aboard! You'll now receive our latest devlogs and studio news directly in your inbox.
      </p>

      <div class="mt-12">
        <h2 class="text-xl font-semibold">What's Next?</h2>
        <div class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-2">
          <a
            href="/devlog"
            class="rounded-md border border-slate-300 p-4 text-center hover:bg-slate-100 dark:border-slate-700 dark:hover:bg-slate-800"
          >
            <p class="font-semibold">Read the Latest Devlog</p>
            <p class="text-sm text-muted">Catch up on our development progress.</p>
          </a>
          <a
            href="/contact#follow-us"
            class="rounded-md border border-slate-300 p-4 text-center hover:bg-slate-100 dark:border-slate-700 dark:hover:bg-slate-800"
          >
            <p class="font-semibold">Follow Our Socials</p>
            <p class="text-sm text-muted">Find us on your favorite platform.</p>
          </a>
        </div>
        <div class="mt-8">
          <a href="/" class="text-sm font-medium text-primary hover:underline dark:text-blue-400">
            &laquo; Back to Homepage
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
