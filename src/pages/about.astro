---
import Features from '~/components/widgets/Features.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <Hero tagline="About Ki10 Games">
    <Fragment slot="title"> Founded by friends, fueled by a passion for creating games we want to play. </Fragment>

    <Fragment slot="subtitle">
      Ki10 Games is a small independent game development studio based in the UK. Our goal isn't to chase trends, but to
      explore all different types of games with a quality-first mindset.
    </Fragment>
  </Hero>

  <Features
    title="Who We Are"
    subtitle="Our story is simple: we've been friends for an incredible amount of time, and with a shared passion for creating games, we thought it was finally time to come together and build something of our own."
    columns={2}
    items={[
      {
        title: 'Mark McManus',
        description:
          'The QA Veteran and Game Designer of the duo, with nearly a decade of experience making sure games are as polished as they are fun.',
        icon: 'tabler:user-edit',
      },
      {
        title: 'Scott Hamilton',
        description:
          'The Lead Artist and World Builder of the team, bringing the quirky ideas and kitten-filled worlds to life.',
        icon: 'tabler:palette',
      },
    ]}
  />

  <Stats
    title="Our Philosophy"
    stats={[
      { title: 'Goal', amount: 'Sell 10 Copies' },
      { title: 'Focus', amount: 'Player Experience' },
      { title: 'Team Size', amount: '2' },
      { title: 'Motto', amount: 'Hail The Kitten!' },
    ]}
  />
</Layout>
