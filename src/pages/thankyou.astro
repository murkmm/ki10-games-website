---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Thank You for Subscribing!',
  description: 'Thanks for joining our mailing list. Please check your inbox to confirm your subscription.',
  // You can set noindex to prevent search engines from listing this page
  robots: {
    index: false,
  },
};
---

<Layout metadata={metadata}>
  <section class="px-4 py-16 sm:py-20">
    <div class="mx-auto max-w-2xl text-center">
      <Icon name="tabler:mail-check" class="mx-auto h-16 w-16 text-green-600" />
      <h1 class="mt-4 text-4xl font-bold tracking-tight sm:text-5xl">You're on the list!</h1>
      <p class="mt-4 text-lg text-muted">Thank you for subscribing to the Ki10 Games newsletter.</p>

      <div
        class="mt-8 rounded-lg border border-yellow-300 bg-yellow-50 p-6 text-left dark:border-yellow-800 dark:bg-yellow-900/30"
      >
        <h2 class="font-bold text-yellow-900 dark:text-yellow-200">⚠️ Important: One Last Step</h2>
        <p class="mt-2 text-yellow-800 dark:text-yellow-300">
          To complete your subscription, please go to your inbox and click the confirmation link in the email we just
          sent you.
        </p>
      </div>

      <div class="mt-12">
        <h2 class="text-xl font-semibold">Keep the Momentum Going</h2>
        <p class="mt-2 text-muted">While you wait, here are a few things you can do:</p>
        <div class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-2">
          <a
            href="/devlog"
            class="rounded-md border border-slate-300 p-4 text-center hover:bg-slate-100 dark:border-slate-700 dark:hover:bg-slate-800"
          >
            <p class="font-semibold">Read the Latest Devlog</p>
            <p class="text-sm text-muted">Catch up on our development progress.</p>
          </a>
          <a
            href="/contact#follow-us"
            class="rounded-md border border-slate-300 p-4 text-center hover:bg-slate-100 dark:border-slate-700 dark:hover:bg-slate-800"
          >
            <p class="font-semibold">Follow Our Socials</p>
            <p class="text-sm text-muted">Find us on your favorite platform.</p>
          </a>
        </div>

        <div class="mt-8">
          <a href="/" class="text-sm font-medium text-primary hover:underline dark:text-blue-400">
            &laquo; Back to Homepage
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
