{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strictNullChecks": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
    "public/**/*"
  ],
  "exclude": [
    "dist/",
    "node_modules/",
    "src/data/post/*.mdx"
  ]
}
